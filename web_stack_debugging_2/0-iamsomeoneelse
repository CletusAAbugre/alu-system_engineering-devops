#!/usr/bin/env bash
# This script runs the whoami command as the user passed as an argument

if [ "$#" -ne 1 ]; then
  echo "Usage: $0 <username>"
  exit 1
fi

username="$1"

if ! id -u "$username" &>/dev/null; then
  echo "Error: User '$username' does not exist."
  exit 1
fi

sudo -u "$username" whoami

